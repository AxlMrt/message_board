<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>
  <body>
    <header>
      <h1><%= title %></h1>
      <p>Welcome to <%= title %></p>
      <nav>
        <a href="/new"><button>new message</button></a>
      </nav>
    </header>

    <div class="content">
      <% if (messages.length > 0) { %>
        <% messages.forEach((message) => { %>
          <div class="message">
            <div class="user">
              <h3><%= message.user %></h3>
              <span><%= message.added %></span>
            </div>
            <p><%= message.text %></p>
          </div>
        <% }); %> 
      <% } else { %>
        <p>Message board is empty</p>
      <% } %>
    </div>
  </body>
</html>
